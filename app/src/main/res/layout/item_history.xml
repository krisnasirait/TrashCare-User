<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/descHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Mengirim sampah yang terdiri dari botol plastik, kaca, dan kertas"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            app:layout_constraintStart_toStartOf="@id/tv_desc"/>

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_on_24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/descHistory"/>

        <TextView
            android:id="@+id/tv_locationHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jl. Bunga Mawar. Duren Sawit, Jakarta Timur"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/iv_location"
            app:layout_constraintTop_toTopOf="@id/iv_location"
            app:layout_constraintBottom_toBottomOf="@id/iv_location"/>

        <TextView
            android:id="@+id/tv_isVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_verification"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_desc"
            app:layout_constraintTop_toBottomOf="@id/tv_locationHistory"/>

        <TextView
            android:id="@+id/isVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="False"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/tv_isVerify"
            app:layout_constraintBottom_toBottomOf="@id/tv_isVerify"
            app:layout_constraintStart_toEndOf="@id/tv_isVerify"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>